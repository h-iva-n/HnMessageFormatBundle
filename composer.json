{
    "name": "hn/message-format-bundle",
    "type": "symfony-bundle",
    "description": "Symfony 2 Bundle - adds ability for Monolog to write logs to redis in Logstash format. For all Symfony versions from 2.0.x",
    "keywords": ["log", "logging"],
    "homepage": "http://www.hauptsache.net",
    "license": "MIT",
    "authors": [
        {
            "name": "Ivan Corkovic",
            "email": "ivan@hauptsache.net"
        }
    ],
    "require": {
        "php": ">=5.3.2",
        "symfony/monolog-bundle": ">=2.0",
        "symfony/monolog-bridge": ">=2.0",
        "symfony/dependency-injection": ">=2.0",
        "symfony/config": ">=2.0",
        "monolog/monolog": "1.*",
        "predis/predis": "0.8.*"
    },
    "require-dev": {
        "symfony/yaml": ">=2.0"
    },
    "autoload": {
        "psr-0": { "Hn\\MessageFormatBundle": "src/" }
    }
}